{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["./*"],
      "~/*": ["app/*"],
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@store/*": ["app/store/*"],
      "@utils/*": ["app/utils/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
, "app/components/screens/CommentScreen.js", "app/components/screens/Feed.js", "app/components/PostCard.tsx", "app/components/BottomTabs.js", "app/store/slices/postsSlice.js"  ]
}
